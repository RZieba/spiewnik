%commands
\setcounter{secnumdepth}{0}         %turn off section numbering


% hyperlink in \section to toc
% Add a link target to the TOC itself
\addtocontents{toc}{\protect\hypertarget{toc}{}}

%
\newif\ifZespol
\newcommand{\tytul}[3]{%
\section[#1]{\hyperlink{toc}{#1}}\\%
\ifZespol\small{\normalfont \textit{\textbf{\hyperlink{toc}{#3}}}}\\\else\fi%
\small{\normalfont \textit{\hyperlink{toc}{#2}}\par\nopagebreak[4]}%
}
